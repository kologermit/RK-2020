'Езда по линии
Sub Line
  While Sensor.ReadPercent(3) > grey Or Sensor.ReadPercent(2) > grey
    If Sensor.ReadPercent(2) > grey Then
      If Sensor.ReadPercent(3) > grey Then
        Motor.Start(BC, speed)
      Else
        Motor.Start(B, speed)
        Motor.Start(C, 0)
      EndIf
    Else
      If Sensor.ReadPercent(3) > grey Then
        Motor.Start(B, 0)
        Motor.Start(C, speed)
      Else
        Motor.Start(BC, speed)
      EndIf
    EndIf
  EndWhile
EndSub

