'Езда по перекрёсткам
Sub Cross_ride
  If robot_position = CR Then
  ElseIf robot_position < CR Then
    While robot_position < CR
      Line()
      robot_position = robot_position + 1
    EndWhile
  Else
    Rotate_hour_180()
    While robot_position > CR
      Line()
      robot_position = robot_position - 1
    EndWhile
    Rotate_hour_180()
  EndIf
EndSub

